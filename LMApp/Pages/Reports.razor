@page "/reports"
@using LMApp.Models.UI
@layout MainLayout
@inherits BasePage

<PageTitle>Reports</PageTitle>

<h1 class="d-none d-big-block">Reports</h1>
<LoadingPanel IsLoading="IsLoading" ErrorMessage="@LoadError" OnRetry="ReloadOnError">
    <div class="container-fluid g-0">
        <div class="row ">
            <div class="col-12">
                <div class="list-group list-group-flush">
                    <a href="/reports/balances" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Balance Report</h6>
                            <p class="mb-1 text-muted">View account closing balances for a configurable number of months</p>
                        </div>
                        <i class="fa-solid fa-chevron-right text-muted"></i>
                    </a>
                    <a href="/reports/expenses" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Category Report</h6>
                            <p class="mb-1 text-muted">View transaction balances by category with monthly breakdown and currency separation</p>
                        </div>
                        <i class="fa-solid fa-chevron-right text-muted"></i>
                    </a>
                    <a href="/reports/income-spending" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Income vs Spending</h6>
                            <p class="mb-1 text-muted">Compare your income and expenses in base currency with monthly breakdown</p>
                        </div>
                        <i class="fa-solid fa-chevron-right text-muted"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</LoadingPanel>

@code {
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        if (LoadCancelled)
            return;

        userService.SetActivePageState("Reports", false);
    }
}
